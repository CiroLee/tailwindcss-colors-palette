{
  "name": "tailwindcss-colors-palette",
  "version": "0.0.3",
  "description": "A color palette plugin for Tailwind CSS 4, providing easy-to-use color palettes for your projects",
  "type": "module",
  "main": "dist/index.css",
  "style": "dist/index.css",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": "./dist/index.css",
    "./colors/ant.css": "./dist/colors/ant.css",
    "./colors/universal.css": "./dist/colors/universal.css",
    "./colors/chakra.css": "./dist/colors/chakra.css",
    "./colors/material.css": "./dist/colors/material.css"
  },
  "keywords": [
    "tailwindcss",
    "tailwindcss4",
    "color-palette",
    "css",
    "design-system",
    "colors"
  ],
  "author": "CiroLee <ciromail@126.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tailwindcss-colors-palette.git"
  },
  "homepage": "https://github.com/yourusername/tailwindcss-colors-palette#readme",
  "bugs": {
    "url": "https://github.com/yourusername/tailwindcss-colors-palette/issues"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "convert": "node convert-colors-to-ts.js",
    "prebuild": "node prebuild.js",
    "build:colors": "pnpm run clean && pnpm run prebuild && pnpm run convert && node build-colors.js",
    "build": "pnpm run build:colors",
    "dev": "node dev-colors.js --watch"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4",
    "autoprefixer": "^10",
    "chokidar": "^3.6.0",
    "postcss": "^8",
    "postcss-cli": "^11",
    "postcss-import": "^16",
    "prettier": "^3.6.2"
  }
}
